#+BEGIN_LaTeX
  \\lstset{caption={${1:Descriptive Caption Text}},
           label=lst:${2:Descriptive Label},
           name=$2,
           firstnumber=${3:$$(yas/choose-value '("auto" "last" "<Custom Number>"))},
           frame=${4:$$(yas/choose-value '("none" "single" "trBL" "shadowbox"))}}
#+END_LaTeX
