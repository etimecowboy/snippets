  framexleftmargin=8mm, %frameround=tttt,
  %rulesepcolor=\\color{red!20!green!20!blue!20},
  floating=false,
  % code format
  tabsize=4, breaklines=true,
  flexiblecolumns=false,
  basicstyle=\\ttfamily\\footnotesize,
  % code decoration
  keywordstyle=\\bf,
  ndkeywordstyle=\\bf,
  identifierstyle=\\bf,
  stringstyle=\\it,
  showstringspaces=false,
  commentstyle=\\rmfamily\\it\\color{grey!80},
  % line number
  numbers=left,  stepnumber=1, numbersep=5pt,
  firstnumber=auto,
  numberstyle=\\tiny\\color{grey!80}
